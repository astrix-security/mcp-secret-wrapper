{
  "name": "mcp-secret-wrapper",
  "version": "0.1.0",
  "description": "MCP Server Secret Wrapper based on Vaults",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-secret": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "aws",
    "secrets-manager",
    "cli"
  ],
  "author": "Astrix Security",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/astrix-security/mcp-secret-wrapper.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.787.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "shx": "^0.3.4"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ]
}